
for($i = 1000; $i < 10000; $i++)
{
    $currentDate = $i; 

    for($k = 0; $k < 4; $k++)
    {
        $exam = $currentDate % 10;
        
        if($exam == 0 or $exam == 2 or $exam == 3 or $exam == 7)
            $inf = true;
        else
        {
            $inf = false;
            break;
        }
            
        $currentDate = intdiv($currentDate, 10);
    }

    if($inf)
        echo $i .' ';

}
