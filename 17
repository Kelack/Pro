//17. Найти наибольший общий делитель (НОД) двух натуральных чисел N и M. 

$n = 2450;
$m = 3500;


if($n > $m)
    $minNumber = $m;
else
    $minNumber = $n;

for($i = $minNumber; $i > 1; $i--)
{
    if(($n % $i == 0) and ($m % $i == 0))
    {
        echo "НОД $n и $m = $i";
        break;
    }
}
